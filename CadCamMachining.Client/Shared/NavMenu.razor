@attribute [Authorize]
@inherits LayoutComponentBase
<MudThemeProvider IsDarkMode="true" />

<AuthorizeView>
    <MudLayout>
        <MudAppBar d-flex align-start flex-grow-1 gap-4>
            <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.Start" Href="#" />
            <MudText>@context.User.Identity.Name</MudText>
            <BreadcrumbSeparator/>
            <MudButton Style="text-transform: none;" StartIcon="@Icons.Material.Filled.Assignment" Href="/OrderOverview" Match="NavLinkMatch.Prefix">Orders</MudButton>
            <MudButton Style="text-transform: none;" StartIcon="@Icons.Material.Filled.ManageAccounts" Href="/CustomerOverview" Match="NavLinkMatch.Prefix">Customers</MudButton>
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Class="d-flex align-end" Color="Color.Inherit" Href="Login" />

        </MudAppBar>
    </MudLayout>
</AuthorizeView>

@code
{
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}